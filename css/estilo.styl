body
	background #F0F0EF
	font-size 15px
	margin 0 auto
	text-align center
	width 100%

header
	background #00B3F9
	border-bottom 2px solid #EE0FDC
	box-shadow 1px 1px 60px #000
	height 50px
	position fixed
	top 0
	width 100%



#porcion
	background #EA0AB6
	display block
	margin 0 auto
	padding .1em

	p 	
		font-size 2em
#top
	background url(../img/bgtop.jpg) #0b333f no-repeat center center fixed
	margin 50px 0 0 0
	padding 3em 0

	h1
		color white
		margin 1em

.contenedor-video 
	padding-bottom 56.25%
	padding-top 30px
	height 0
	overflow hidden

.contenedor-video iframe,
.contenedor-video object,
.contenedor-video embed 
	top 0
	left 0
	width 100%
	height 100%

.nav
	float right
	margin -2em 1em 0 2em


.nav li 
	display inline-block
	vertical-align top

	
.nav-list
	display inline-block
	list-style none
	vertical-align top


.nav-item a
	color #EAEAEA
	display inline-block
	font-family 'Roboto'
	margin 0 .5em
	text-decoration none
	vertical-align top

