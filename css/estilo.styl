body
	background #F0F0F0

header
	background #00B3F9
	border 2px #ffffff
	box-shadow 1px 1px 60px #000
	height 50px
	position fixed
	top 0
	width 100%

#top
	background url(../img/bgtop.jpg) #0b333f no-repeat center center fixed
	margin 4em 0
	padding 4em

.magenta
	background #EA0AB6

.nav
	float right
	margin -2em 1em 0 2em


.nav li 
	display inline-block
	vertical-align top

	
.nav-list
	display inline-block
	list-style none
	vertical-align top


.nav-item a
	color #EAEAEA
	display inline-block
	font-family 'Roboto'
	margin 0 .5em
	text-decoration none
	vertical-align top

